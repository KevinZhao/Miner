<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fsy.google.MapsActivity">
    </fragment>
    <Button
        android:id="@+id/bt_pop"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="更新频率：5s"
        android:background="@drawable/button_fliter_down"
        >
    </Button>
    <CheckBox
        android:id="@+id/cb_traffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="路况"
        android:onClick="onTrafficToggled"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/bt_getdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取数据"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>
</FrameLayout>
